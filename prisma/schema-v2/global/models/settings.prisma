model InstanceAccessGroup {
    id                String                          @id @default(uuid()) @db.Uuid
    // publicId          String                          @unique
    name              String                          @unique
    permissions       InstanceAccessGroupPermission[]
    staffAccessGroups StaffAccessGroup[]
    createdAt         DateTime                        @default(now())
    updatedAt         DateTime                        @updatedAt
}

model InstanceAccessGroupPermission {
    id            String              @id @default(uuid()) @db.Uuid
    // publicId      String              @unique
    accessGroupId String              @db.Uuid
    accessGroup   InstanceAccessGroup @relation(fields: [accessGroupId], references: [id], onDelete: Cascade)
    value         String
    createdAt     DateTime            @default(now())
    updatedAt     DateTime            @updatedAt
}

model InstanceSecuritySettings {
    id                        String   @id @default(uuid()) @db.Uuid
    // publicId                  String   @unique
    staffEnableSelfRecovery   Boolean  @default(false)
    staffInvitationDuration   String
    partnerInvitationDuration String
    createdAt                 DateTime @default(now())
    updatedAt                 DateTime @updatedAt
}

model InstanceEmailSettings {
    id             String   @id @default(uuid()) @db.Uuid
    // publicId       String   @unique
    smtpHost       String
    smtpPort       String
    smtpUsername   String
    smtpPassword   String
    smtpEncryption String
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt
}

model InstancePaymentSettings {
    id                      String   @id @default(uuid()) @db.Uuid
    // publicId                String   @unique
    paymentGateway          String   @db.VarChar(50) // stripe, paystack, flutterwave, etc.
    paymentGatewaySecretKey String   @db.VarChar(255)
    paymentGatewayPublicKey String   @db.VarChar(255)
    createdAt               DateTime @default(now())
    updatedAt               DateTime @updatedAt
}
